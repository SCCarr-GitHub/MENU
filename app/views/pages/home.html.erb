<div class="homepage-container">
  <div class="home-page-avatar">
    <% if user_signed_in? %>
      <% if current_user.photo.present? %>
        <%= cl_image_tag current_user.photo.key, class: "avatar" %>
      <% else %>
        <%= image_tag "https://www.nicepng.com/png/full/115-1150821_default-avatar-comments-sign-in-icon-png.png", class: "avatar" %>
      <% end %>
    <% end %>
  </div>
  <div class="logo-container">
    <img src="https://res.cloudinary.com/dyvrpbbez/image/upload/v1696428312/me.n.u_final__720_fcuaht.png" class="logo-image">
  </div>
</div>
<div class="search-page">
  <div class="search-center">
    <div class="search-container">
      <%= form_tag(search_pages_path, method: :get) do %>
        <%= text_field_tag :query, params[:query], placeholder: "Search...", class: "search-input" %>
        <%= button_tag type: "submit", class: "rounded-button" do %>
          <i class="fa-solid fa-magnifying-glass fa-lg" ></i>
        <% end %>
      <% end %>
    </div>
  </div>
 <div>
</div>
<br>
<div class="restaurants-row">
  <% @restaurants.each do |restaurant| %>
    <%= link_to restaurant_path(restaurant) do %>
      <div class="restaurant-card">
        <div class="row align-items-center">
          <div class="col-12">
            <% if restaurant.photos.any? %>
              <% photo = restaurant.photos.first %>
              <div style="border-radius: 0.60rem 0.60rem 0.60rem 0.60rem; overflow: hidden; object-fit:cover">
                <%= cl_image_tag photo.key, style:'width: 100%; height:160px' , alt: 'Restaurant Photo' %>
              </div>
            <% else %>
              <div style="border-radius: 0.60rem 0.60rem 0.60rem 0.60rem; overflow: hidden; object-fit:cover">
                <%= image_tag 'https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=3270&q=80', style:'width: 100%; height:150px', alt: 'Default Photo' %>
              </div>
            <% end %>
            <div>
              <div class="card-info-header"><strong><%= restaurant.name %></strong></div>
              <div class="card-info"><em><%= restaurant.category %></em></div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
   <% end %>
  </div>
</div>
