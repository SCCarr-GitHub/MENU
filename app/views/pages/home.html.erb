<div class="homepage-container">
  <div class="logo-container">
    <img src="https://res.cloudinary.com/dyvrpbbez/image/upload/v1696525213/me.n.u-black_720_k4obse.png" class="logo-image">
  </div>
</div>

<div class="search-page">
  <%# featured restaurants %>
<h3 class="home-header">Featured Restaurants</h3>
<div class="featured-restaurants">
  <% @featured.each do |restaurant| %>
    <%= link_to restaurant_path(restaurant) do %>
     <% if restaurant.photos.any? %>
        <div class="feature-card" style="background-image: url(<%= cl_image_path(restaurant.photos.first.key) %>)">
      <% else %>
        <div class="feature-card" style="background-image: url('https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=3270&q=80')">
      <% end %>
        <div class="feature-card-info">
          <h5><%= restaurant.name %></h5>
        </div>
      </div>
    <% end %>
  <% end %>
  </div>
  <%# All restaurants %>
    <h3 class="home-header">All Restaurants</h3>
    <div class="restaurants-row">
      <% @restaurants.each do |restaurant| %>
        <%= link_to restaurant_path(restaurant) do %>
          <div class="restaurant-card">
            <div class="row align-items-center">
              <div class="col-12">
                <% if restaurant.photos.any? %>
                  <% photo = restaurant.photos.first %>
                  <div style="border-radius: 0.50rem 0.50rem 0.0rem 0.0rem; overflow: hidden; object-fit:cover">
                    <%= cl_image_tag photo.key, style:'width: 100%; height:100px' , alt: 'Restaurant Photo' %>
                  </div>
                <% else %>
                  <div style="border-radius: 0.50rem 0.50rem 0.0rem 0.0rem; overflow: hidden; object-fit:cover">
                    <%= image_tag 'https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=3270&q=80', style:'width: 100%; height:100px', alt: 'Default Photo' %>
                  </div>
                <% end %>
                <div class="card-info">
                  <div class="card-title">
                    <h4><%= restaurant.name %></h4>
                  </div>
                  <div class="restaurant-rating">
                    <p><%= restaurant.category %></p>
                    <p class="rating"><i class="fa-regular fa-star"></i><%=4.5 %></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
