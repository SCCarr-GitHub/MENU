<br>
<div class="search-page">

<div class="search-center">
  <div class="search-container mt-2">
    <%= form_tag(search_pages_path, method: :get) do %>
      <%= text_field_tag :query, params[:query], placeholder: "Search...", class: "search-input" %>
      <%= button_tag type: "submit", class: "rounded-button" do %>
        <i class="fa-solid fa-magnifying-glass fa-lg" ></i>
      <% end %>
    <% end %>
  </div>
</div>

  <div>
    <% if @search_results.any? %>
      <h3 class="sub-heading">Search Results</h3>
      <ul class="search-results">
        <% @search_results.each do |result| %>
          <li class="search-result">
            <% if result.searchable_type == "Restaurant" %>
              <%= link_to result.searchable.name, restaurant_path(result.searchable.id), class: "search-result-link card-link" %>
            <% else %>
              <%= link_to result.searchable.item_name, restaurant_menu_path(result.searchable.restaurant_menu_id), class: "search-result-link card-link" %>
              <%= result.searchable.item_price %>
            <% end %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <h3 class="sub-heading">Suggested</h3>
      <div class="row">
        <% @sample_top_rated.each do |item| %>
          <%= link_to restaurant_menu_path(item.restaurant_menu), class: "card-link" do %>
            <div class="col-md-4">
              <div class="card">
                <div class="card-body d-flex justify-content-between">
                  <div>
                    <h5 class="info-heading"><%= item.item_name %></h5>
                    <p class="card-info">R<%= item.item_price %></p>
                    <p class="card-info"><em><%= item.restaurant_menu.restaurant.name %></em></p>
                  </div>
                  <div>
                    <p class="card-info"><%= pluralize(item.ratings.count, 'vote') %></p>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
  </div>
      <% end %>
    <div class="mapbox">
      <div style="width: 100%; height: 260px;"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
      </div>
    </div>
  </div>
</div>
