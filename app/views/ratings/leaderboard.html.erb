<div class="homepage-container">
  <div class="home-page-avatar">
    <% if user_signed_in? %>
      <% if current_user.photo.present? %>
        <%= cl_image_tag current_user.photo.key, class: "avatar" %>
      <% else %>
        <%= image_tag "https://www.nicepng.com/png/full/115-1150821_default-avatar-comments-sign-in-icon-png.png", class: "avatar" %>
      <% end %>
    <% end %>
  </div>
  <div class="logo-container">
    <img src="https://res.cloudinary.com/dyvrpbbez/image/upload/v1696428312/me.n.u_final__720_fcuaht.png" class="logo-image">
  </div>
</div>
<h2 class="home-header">Leaderboard</h2>
<div class="row">
  <% @top_rated.each do |item| %>
    <%= link_to restaurant_menu_path(item.restaurant_menu), class: "card-link" do %>
      <div class="col-md-6">
        <div class="card">
          <div class="card-body d-flex justify-content-between">
            <div>
              <h5 class="card-title"><%= item.item_name %></h5>
              <p class="card-text">R<%= item.item_price %></p>
              <p class="card-text"><em><%= item.restaurant_menu.restaurant.name %></em></p>
            </div>
            <div>
              <p class="card-text"><%= pluralize(item.ratings.count, 'vote') %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
