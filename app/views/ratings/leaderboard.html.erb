<div class="homepage-container">
  <div class="logo-container">
    <img src="https://res.cloudinary.com/dyvrpbbez/image/upload/v1696525213/me.n.u-black_720_k4obse.png" class="logo-image">
  </div>
</div>
  <h2 class="search-heading">Leaderboard</h2>
  <div class="search-page">
    <div class="row">
      <% @top_rated.each_with_index do |item, index| %>
        <%= link_to restaurant_menu_path(item.restaurant_menu), class: "leaderboard-card-link" do %>
          <div class="col-md-6">
            <div class="card">
              <div class="card-body d-flex justify-content-between">
                <div>
                  <p class="card-title">
                    <% if index == 0 %>
                      <i class="fa-solid fa-trophy fa-lg" style="color: #000000;"></i>
                    <% else %>
                      <strong><%= index + 1 %></strong>
                    <% end %>
                    -  <strong><%= item.item_name %></strong>
                  </p>
                  <p class="card-text"><em><%= item.restaurant_menu.restaurant.name %></em></p>
                </div>
                <div>
                  <p class="card-text"><%= pluralize(item.ratings.count, 'vote')%> <i class="fa-regular fa-thumbs-up"></i></p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
