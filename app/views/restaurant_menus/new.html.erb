<div class="home-header"><h1>Me.N.u</h1></div>
<div class="home-page-avatar">
  <% if user_signed_in? %>
    <% if current_user.photo.present? %>
      <%= cl_image_tag current_user.photo.key, class: "avatar" %>
    <% else %>
      <%= image_tag "https://www.nicepng.com/png/full/115-1150821_default-avatar-comments-sign-in-icon-png.png", class: "avatar" %>
    <% end %>
  <% end %>
</div>
<br>
<div class="tesseract-container">
  <div class="tesseract-form">
    <%= form_with(model: [@restaurant, @restaurant_menu], data: { controller: "ocr" }) do |form| %>
      <div>
        <%= form.label :description %>
        <%= form.text_field :description %>
      </div>
      <div>
        <%= form.label :photos %>
        <%= form.file_field :photos, data: { ocr_target: "file", action: "change->ocr#upload" } %>
      </div>
      <div>
        <%= form.label :photo_description %>
        <%= form.text_area :photo_description, data: { ocr_target: "photo_description", rows: 4 } %>
      </div>
      <div>
        <%= form.submit %>
      </div>
    <% end %>
  </div>
</div>
